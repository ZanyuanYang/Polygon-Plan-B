<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controller">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.controller.StudentConnectionActivity" android:parentActivityName="com.example.controller.MainActivity"/>
        <activity android:name="com.example.controller.StudentHistoryActivity" />
        <activity android:name="com.example.controller.StudentProfileActivity" />
        <activity android:name="com.example.controller.TutorConnectionActivity" />
        <activity android:name="com.example.controller.TutorHistoryActivity" />
        <activity android:name="com.example.controller.TutorPageActivity" />
        <activity android:name="com.example.controller.TutorProfileActivity" />
        <activity android:name="com.example.controller.LoginActivity" />
        <activity android:name="com.example.controller.StudentPageActivity" />
        <activity android:name="com.example.controller.ChooseActivity" />
        <activity android:name="com.example.controller.getStartedActivity" />
        <activity android:name="com.example.controller.StudentRegisterActivity" />
        <activity android:name="com.example.controller.TutorRegisterActivity" />
        <activity android:name="com.example.controller.SubmitTicketActivity" />
        <activity android:name="com.example.controller.AcceptTicketActivity" />
        <activity android:name="com.example.controller.AddCourses"></activity>
        <activity android:name="com.example.controller.WelcomePageActivity" />
        <activity android:name="com.example.controller.ResetPasswordActivity" />
        <activity android:name="com.example.controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.services.FCMService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>